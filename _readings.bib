  month = sep,
  year = {2010},
  keywords = {Management actions,Planned burn,Policy implications,Prescribed fire,wildfire},
  pages = {1928--1939},
  file = {Driscoll et al. - 2010 - Fire management for biodiversity conservation Key.pdf:/Users/bbest/zotero/storage/7HQNM8N7/Driscoll et al. - 2010 - Fire management for biodiversity conservation Key.pdf:application/pdf;ScienceDirect Snapshot:/Users/bbest/zotero/storage/6A849SFF/S0006320710002636.html:text/html}
