@article{bottrill_effectiveness_2012,
  title = {The effectiveness and evaluation of conservation planning},
  volume = {5},
  copyright = {{\textcopyright}2012 {Wiley} {Periodicals}, {Inc}.},
  issn = {1755-263X},
  url = {http://onlinelibrary.wiley.com/doi/10.1111/j.1755-263X.2012.00268.x/abstract},
