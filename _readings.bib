  author = {\'{A}lvarez-Romero, Jorge G. and Pressey, Robert L. and Ban, Natalie C. and Vance-Borland, Ken and Willer, Chuck and Klein, Carissa Joy and Gaines, Steven D.},
  year = {2011},
  keywords = {Biodiversity conservation,cross-system threat,ecological connection,land-sea process,marine protected area,Spatial planning},
  pages = {381--409},
  file = {Álvarez-Romero et al. - 2011 - Integrated Land-Sea Conservation Planning The Mis.pdf:/Users/bbest/zotero/storage/DJPKVQ96/Álvarez-Romero et al. - 2011 - Integrated Land-Sea Conservation Planning The Mis.pdf:application/pdf}
