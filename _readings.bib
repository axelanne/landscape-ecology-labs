  author = {Gustafson, Eric J.},
  month = aug,
  year = {2013},
  keywords = {climate change,Disturbances,Ecology,Empirical modeling,Forestry,Forestry Management,forests,Global changes,Landscape ecology,Landscape modeling,Mechanistic modeling,Phenomenological modeling,Plant ecology,Plant Sciences},
