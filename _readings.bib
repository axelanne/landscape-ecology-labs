  number = {1},
  urldate = {2015-02-01},
  journal = {Landscape {Ecology}},
  author = {Turner, Monica G. and Romme, William H.},
  month = mar,
  year = {1994},
  keywords = {Crown fire,Ecology,fire models,fire regimes,Forestry,Forestry Management,Landscape ecology,patch mosaic,Plant ecology,Plant Sciences},
  pages = {59--77},
  file = {Snapshot:/Users/bbest/zotero/storage/FNDCT782/BF00135079.html:text/html;Turner and Romme - 1994 - Landscape dynamics in crown fire ecosystems.pdf:/Users/bbest/zotero/storage/B825Q2XD/Turner and Romme - 1994 - Landscape dynamics in crown fire ecosystems.pdf:application/pdf}
}

@article{hessburg_dry_2005,
